<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_view_deposit" model="ir.ui.view">
        <field name="name">product.template.form.deposit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']//group[@name='sale']" position="inside">
                <group string="Guarantee Deposit" name="deposit">
                    <field name="has_deposit" invisible="type == 'service'" />
                    <field name="deposit_product_id"
                        invisible="not has_deposit"
                        required="has_deposit" />
                </group>
            </xpath>
        </field>
    </record>
</odoo> 